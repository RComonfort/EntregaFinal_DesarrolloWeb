<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rcv.proyecto2.VideogameActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX = "8dp">

            <TextView
                android:id="@+id/lbladsoft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videogame demo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.184" />

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title here..."
                android:inputType="textShortMessage"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="91dp" />

            <EditText
                android:id="@+id/edtDeveloper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Developer here..."
                android:inputType="textShortMessage"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="91dp" />

            <EditText
                android:id="@+id/edtPublisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Publisher here..."
                android:inputType="textShortMessage"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="91dp" />

            <EditText
                android:id="@+id/edtYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Release year here..."
                android:inputType="textShortMessage"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="91dp" />

            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Description here..."
                android:ems="10"
                android:inputType="textImeMultiLine"
                tools:layout_editor_absoluteX="153dp"
                tools:layout_editor_absoluteY="94dp" />

            <EditText
                android:id="@+id/edtGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Genre here..."
                android:inputType="textShortMessage"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="91dp" />

            <EditText
                android:id="@+id/edtImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textImeMultiLine"
                tools:layout_editor_absoluteX="153dp"
                tools:layout_editor_absoluteY="94dp" />

            <Button
                android:id="@+id/btnVideogame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Videogame"
                tools:layout_editor_absoluteX="127dp"
                tools:layout_editor_absoluteY="198dp" />

        </LinearLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>